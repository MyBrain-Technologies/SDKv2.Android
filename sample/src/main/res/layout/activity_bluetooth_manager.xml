<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".BluetoothManagerActivity">

    <Button
        android:id="@+id/btn_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="btn_count" />

    <Button
        android:id="@+id/btn_is_connected"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="btn_is_connected" />

    <Button
        android:id="@+id/btn_connect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Connect" />

    <Button
        android:id="@+id/btn_read_battery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Read battery level" />

    <Button
        android:id="@+id/btn_disconnect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Disconnect" />

    <Button
        android:id="@+id/btn_clear_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="btn_clear_text" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical">

        <TextView
            android:id="@+id/txt_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16dp" />
    </ScrollView>
</LinearLayout>